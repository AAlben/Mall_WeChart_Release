@{
    Layout = null;
}
<table class="table">
    <tr>
        <th>商品名称</th>
        <th>销售数量</th>
        <th>价格</th>
        <th>实际价格</th>
        <th>用户</th>
        <th>收获地址</th>
        <th>电话</th>
        <th>订单状态</th>
    </tr>
    @{
        foreach (var item in ViewBag.list)
        {
            <tr>
                <td>@item.CommodityName</td>
                <td>@item.Count</td>
                <td>@item.UnitPrice</td>
                <td>@item.RealUnitPrice</td>
                <td>@item.UserName</td>
                <td>@item.Address</td>
                <td>@item.PhoneNum</td>
                @if (item.OrderState == 1)
                {
                    <td>待付款</td>
                }
                else if (item.OrderState == 2)
                {
                    <td>待发货</td>
                }
                else if (item.OrderState == 3)
                {
                    <td>已发货</td>
                }
                else if (item.OrderState == 4)
                {
                    <td>退款中</td>
                }
                else if (item.OrderState == 5)
                {
                    <td>已完成</td>
                }
                else if (item.OrderState == 6)
                {
                    <td>已关闭</td>
                }

                <td>
                    <a href="#" class="inner_btn">修改价格</a>
                    @if (item.OrderState == 2)
                    {
                        <a href="#">发货</a>
                    }
                </td>
            </tr>
        }
    }
</table>

